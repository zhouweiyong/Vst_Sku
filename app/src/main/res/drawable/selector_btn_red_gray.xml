<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/shape_button_round_gray" android:state_focused="true" android:state_pressed="false" />
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#993012" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#993012" />
        </shape>
    </item>
    <item android:drawable="@drawable/shape_button_round_gray" android:state_enabled="false" />

    <item android:drawable="@drawable/shape_button_round_red" />
</selector>